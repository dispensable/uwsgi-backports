#!/bin/sh
# postinst script for uwsgi-plugin-rack
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    configure)
      RUBY_VER_DEFAULT_DOTLESS=@@default_ruby_version_dotless@@
      for RUBY_VER_DOTLESS in @@available_ruby_versions_dotless@@; do
        if [ "x$RUBY_VER_DOTLESS" = "x$RUBY_VER_DEFAULT_DOTLESS" ]; then
          ALTERNATIVE_PRIORITY=75
        else
          ALTERNATIVE_PRIORITY=35
        fi
        update-alternatives --quiet \
          --install \
            /usr/lib/uwsgi/plugins/rack_plugin.so \
            uwsgi-plugin-rack \
            /usr/lib/uwsgi/plugins/rack_ruby${RUBY_VER_DOTLESS}_plugin.so \
            $ALTERNATIVE_PRIORITY \
          --slave \
            /usr/bin/uwsgi_rack \
            uwsgi_rack \
            /usr/bin/uwsgi-core \
          --slave \
            /usr/share/man/man1/uwsgi_rack.1.gz \
            uwsgi_rack.1.gz \
            /usr/share/man/man1/uwsgi_rack_ruby${RUBY_VER_DOTLESS}.1.gz

        update-alternatives --quiet \
          --install \
            /usr/bin/uwsgi \
            uwsgi \
            /usr/bin/uwsgi_rack_ruby${RUBY_VER_DOTLESS} \
            35 \
          --slave \
            /usr/share/man/man1/uwsgi.1.gz \
            uwsgi.1.gz \
            /usr/share/man/man1/uwsgi_rack_ruby${RUBY_VER_DOTLESS}.1.gz
      done

      UWSGI_RACK_BINARY_IS_UWSGI_ALTERNATIVE="$(\
        update-alternatives --list uwsgi 2>/dev/null \
        | grep '/uwsgi_rack$' \
        | wc -l \
      )"
      if [ "$UWSGI_RACK_BINARY_IS_UWSGI_ALTERNATIVE" -eq 0 ]; then
        update-alternatives --quiet \
          --install \
            /usr/bin/uwsgi \
            uwsgi \
            /usr/bin/uwsgi_rack \
            35 \
          --slave \
            /usr/share/man/man1/uwsgi.1.gz \
            uwsgi.1.gz \
            /usr/share/man/man1/uwsgi_rack.1.gz
      fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
